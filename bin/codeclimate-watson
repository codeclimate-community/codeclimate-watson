#!/usr/bin/env ruby

require 'json'

if File.exists?("/config.json")
  engine_config = JSON.parse(File.read("/config.json"))
else
  engine_config = {}
end

Dir.chdir("/code")
cmd = "ember-watson"
if exclude_paths = engine_config['exclude_paths']
  exclude_paths.each do |path|
    cmd << " -e #{path}"
  end
end
cmd << " -d all '.'"
result = `#{cmd}`
print result
exit $?.exitstatus
